/*
Funkce pro práci s float jsou compiler specific
Little endian (MSP430, ARM Cortex-M3)
*/

#include "..\Endian.H"

float fEndian_MsbLsbToFloat(uint8_t * ptr)
{
	float f;
	*(((uint8_t *)&f)+3)=ptr[0];
	*(((uint8_t *)&f)+2)=ptr[1];
	*(((uint8_t *)&f)+1)=ptr[2];
	*(((uint8_t *)&f)+0)=ptr[3];
	return f;
}

void Endian_FloatToMsbLsb(float f, uint8_t * ptr)
{
	ptr[0]=*(((uint8_t *)&f)+3);
	ptr[1]=*(((uint8_t *)&f)+2);
	ptr[2]=*(((uint8_t *)&f)+1);
	ptr[3]=*(((uint8_t *)&f)+0);
}

uint16_t Endian_FloatToMsbLsbH(float f, uint8_t * ptr)
{
	uint16_t result;
  	ptr[0]=*(((uint8_t *)&f)+3);
	ptr[1]=*(((uint8_t *)&f)+2);
	result=ptr[0];
	result<<=8;
	result|=ptr[1];
	return result;
}

uint16_t Endian_FloatToMsbLsbL(float f, uint8_t * ptr)
{
	uint16_t result;
  	ptr[0]=*(((uint8_t *)&f)+1);
	ptr[1]=*(((uint8_t *)&f)+0);
	result=ptr[0];
	result<<=8;
	result|=ptr[1];
	return result;
}

double Endian_MsbLsbToDouble(uint8_t * ptr)
{
	double f;
	*(((uint8_t *)&f)+7)=ptr[0];
	*(((uint8_t *)&f)+6)=ptr[1];
	*(((uint8_t *)&f)+5)=ptr[2];
	*(((uint8_t *)&f)+4)=ptr[3];
	*(((uint8_t *)&f)+3)=ptr[4];
	*(((uint8_t *)&f)+2)=ptr[5];
	*(((uint8_t *)&f)+1)=ptr[6];
	*(((uint8_t *)&f)+0)=ptr[7];
	return f;
}

void Endian_DoubleToMsbLsb(double f, uint8_t * ptr)
{
	ptr[0]=*(((uint8_t *)&f)+7);
	ptr[1]=*(((uint8_t *)&f)+6);
	ptr[2]=*(((uint8_t *)&f)+5);
	ptr[3]=*(((uint8_t *)&f)+4);
	ptr[4]=*(((uint8_t *)&f)+3);
	ptr[5]=*(((uint8_t *)&f)+2);
	ptr[6]=*(((uint8_t *)&f)+1);
	ptr[7]=*(((uint8_t *)&f)+0);
}

